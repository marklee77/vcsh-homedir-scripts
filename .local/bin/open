#!/bin/bash

for FILE; do
    EXT=$(echo ${FILE##*.} | tr '[:upper:]' '[:lower:]')
    if ! [ -f "${FILE}" ]; then
        echo "${FILE} not found..." >&2
    elif [ "${FILE}" = "${EXT}" ]; then
        echo "${FILE} does not have an extension." >&2
    fi
    case "${EXT}" in
        htm) ;&
        html)
            firefox "${FILE}" >/dev/null 2>&1 &
            ;;
        jpg) ;&
        jpeg) ;&
        png) ;&
        gif)
            geeqie "${FILE}" >/dev/null 2>&1 &
            ;;
        pdf)
            evince "${FILE}" >/dev/null 2>&1 &
            ;;
        *)
            echo "${FILE} extension not recognized." >&2
            ;;
    esac
done
